<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" 
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch 
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/util 
		http://www.springframework.org/schema/util/spring-util-3.2.xsd"
		">
    <import resource="/config/context.xml" />
	<import resource="/config/database.xml" />
	<import resource="/job/job-report.xml" />
	
	<job id="testJob" xmlns="http://www.springframework.org/schema/batch">
		<step id="step1" next="step2">
			<tasklet>
				<chunk reader="pagingItemReader" writer="flatFileItemWriter"
					commit-interval="10" />
			</tasklet>
		</step>
		<step id="step2" next="step3">
			<batch:tasklet>
				<batch:chunk reader="cvsFileItemReader" writer="mysqlItemWriter"
					commit-interval="1000">
				</batch:chunk>
			</batch:tasklet>
		</step>
		<step id="step3" next="step4">
			<batch:tasklet>
				<batch:chunk reader="pagingItemReaderForDept" writer="flatFileItemWriterForDept"
					commit-interval="10">
				</batch:chunk>
			</batch:tasklet>
		</step>
		
		<step id="step4">
			<batch:tasklet>
				<batch:chunk reader="fileItemReaderForDept" writer="itemWriterForDept"
					commit-interval="1000">
				</batch:chunk>
			</batch:tasklet>
		</step>
	</job>
	
	
	<bean id="pagingItemReader"
		class="org.springframework.batch.item.database.JdbcPagingItemReader"
		scope="step">
		<property name="dataSource" ref="dataSource" />
		<property name="queryProvider">
			<bean
				class="org.springframework.batch.item.database.support.SqlPagingQueryProviderFactoryBean">
				<property name="dataSource" ref="dataSource" />
				<property name="selectClause" value="SELECT LOWER(PERSON_CODE) as PERSON_CODE, DISPLAY_NAME, UNIT_CODE, jobtitle" />
				<property name="fromClause" value="FROM IM_USER_View" />
				<property name="sortKey" value="PERSON_CODE" />
			</bean>
		</property>
		<property name="pageSize" value="10" />
		<property name="rowMapper">
			<bean class="com.homeplus.batch.mapper.UserVORowMapper" />
		</property>
	</bean>

	
	<!-- csv file writer -->
	<bean id="flatFileItemWriter" class="org.springframework.batch.item.file.FlatFileItemWriter">
	    <property name="encoding" value="UTF-8"/>
		<property name="resource" value="file:output/users.dat" />
		<property name="appendAllowed" value="true" />
		<property name="lineAggregator">
			<bean
				class="org.springframework.batch.item.file.transform.DelimitedLineAggregator">
				<property name="delimiter" value="|" />
				<property name="fieldExtractor">
					<bean
						class="org.springframework.batch.item.file.transform.BeanWrapperFieldExtractor">
						<property name="names" value="userId, userNm, deptId, jobTitle" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	
	<bean id="pagingItemReaderForDept"
		class="org.springframework.batch.item.database.JdbcPagingItemReader"
		scope="step">
		<property name="dataSource" ref="dataSource" />
		<property name="queryProvider">
			<bean
				class="org.springframework.batch.item.database.support.SqlPagingQueryProviderFactoryBean">
				<property name="dataSource" ref="dataSource" />
				<property name="selectClause" value="SELECT UNIT_CODE, UNIT_NAME" />
				<property name="fromClause" value="FROM IM_DEPT_View" />
				<property name="whereClause" value="WHERE companyCode ='HC' " />
				<property name="sortKey" value="UNIT_CODE" />
			</bean>
		</property>
		<property name="pageSize" value="10" />
		<property name="rowMapper">
			<bean class="com.homeplus.batch.mapper.UserVORowMapper" />
		</property>
	</bean>

	
	<!-- csv file writer -->
	<bean id="flatFileItemWriterForDept" class="org.springframework.batch.item.file.FlatFileItemWriter">
	    <property name="encoding" value="UTF-8"/>
		<property name="resource" value="file:output/users.dat" />
		<property name="appendAllowed" value="true" />
		<property name="lineAggregator">
			<bean
				class="org.springframework.batch.item.file.transform.DelimitedLineAggregator">
				<property name="delimiter" value="|" />
				<property name="fieldExtractor">
					<bean
						class="org.springframework.batch.item.file.transform.BeanWrapperFieldExtractor">
						<property name="names" value="userId, userNm, deptId, jobTitle" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	
	
</beans>